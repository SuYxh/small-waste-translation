{
  "name": "small-waste-translation",
  "displayName": "小废物翻译",
  "description": "翻译",
  "version": "0.0.1",
  "publisher": "y170088888",
  "repository": {
    "type": "git",
    "url": "https://github.com/SuYxh/small-waste-translation-docs"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "small-waste-translation.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "small-waste-translation.translateToEnglish",
        "title": "📝 翻译成英文"
      },
      {
        "command": "small-waste-translation.translateToChinese",
        "title": "📝 翻译成中文"
      },
      {
        "command": "small-waste-translation.generateFunctionName",
        "title": "📝 生成函数名"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "small-waste-translation.translateToChinese",
          "group": "5_translation@1"
        },
        {
          "command": "small-waste-translation.translateToEnglish",
          "group": "5_translation@2"
        },
        {
          "command": "small-waste-translation.generateFunctionName",
          "group": "5_translation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.11",
    "node-fetch": "^3.3.2"
  }
}
